# Banking Workflow Automation - Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# API Security
API_KEY_1=your-secure-api-key-here-change-this
API_KEY_2=your-second-api-key-here-change-this

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Database Configuration (when moving from in-memory storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/banking_workflow
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# Integration API Keys (for real integrations)
# IDENTITY_VERIFICATION_API_KEY=your-key-here
# CREDIT_CHECK_API_KEY=your-key-here
# KYC_AML_API_KEY=your-key-here

# Security Settings
# SESSION_SECRET=your-very-long-random-secret-key-min-32-chars
# JWT_SECRET=your-jwt-secret-key-here
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption Keys (for PII encryption)
# ENCRYPTION_KEY=your-32-byte-base64-encoded-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Timeouts
INTEGRATION_TIMEOUT_SECONDS=30

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-here
# ENABLE_METRICS=true

# Feature Flags
MOCK_MODE=true
ENABLE_DEBUG=false
